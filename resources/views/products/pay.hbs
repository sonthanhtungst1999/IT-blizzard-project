        src="https://www.paypal.com/sdk/js?client-id=AUJ69jCWQNv94Houe7UxopSM7NyKZKPpRVTBIsIrjiMjgiip2SK7hYprVgPAverTjboAk5NqNOYsY-3U&disable-funding=credit,card"> // Required. Replace YOUR_CLIENT_ID with your sandbox client ID.
    </script>
    <script src="/js/payment.js"></script> --}}
</body>
{{> pay-footer}}

{{!-- Message --}}
{{#if message}}
<script>
    Swal.fire(
        '{{message.title}}',
        '{{message.content}}',
        '{{message.type}}'
    )
</script>
{{/if}}

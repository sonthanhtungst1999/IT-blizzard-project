<div class="login-form-container">
    <div class="container">
        <div style="height: 100vh;" class="row d-flex justify-content-center">
            <div class="d-flex flex-column justify-content-center align-item-center" style="width: 450px;">
                <form class="login-form" method="POST">
                    <img class="mx-auto d-block p-3 mb-4" style="width: 240px;" src="/image/blizzard-entertainment.svg">
                    <div class="form-row">
                      <div class="form-group col-12">
                        <input name="email" type="text" class="form-control" id="inputEmail" placeholder="Email or Phone" autocomplete="off">
                      </div>
                      <div class="form-group col-12">
                        <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                      </div>
                    </div>
                    <button type="submit" style="font-size:1rem" class="btn-explore btn w-100 mt-3 mb-2">Log In</button>
                    <div class="third-party-lines">
                        <span>OR LOG IN WITH</span>
                    </div>
                    <div class="external-login-container d-flex justify-content-around align-items-center">
                        <div id="facebook"><a href="#"><i class="fab fa-facebook text-light"></i></a></div>
                        <div id="google"></a><img src="/image/google.svg"></div>
                        <div id="apple"><a href="#"><i class="fab fa-apple"></i></a></div>
                    </div>
                    <ul class="help-links p-0">
                        <li>
                            <a href="/me/register" class="btn">create a free blizzard account</a>
                        </li>
                        <li>
                            <a href="#" class="btn">can't log in? <i class="fas fa-external-link-alt pl-1"></i></a>
                        </li>
                    </ul>
                </form>

            </div>
        </div>
    </div>
</div>

{{!-- Message --}}
{{#if message}}
<script>
    Swal.fire(
        '{{message.title}}',
        '{{message.content}}',
        '{{message.type}}'
    )
</script>
{{/if}}

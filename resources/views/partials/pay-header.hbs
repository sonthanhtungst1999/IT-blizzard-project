<!-- header pay-->
<header class="pay-header-container container-fluid p-0">
    <div class="row p-0">
        <div class="col p-0">
            <div class="container-fluid p-0">
                <nav class="navbar navbar-expand-lg navbar-dark pt-0 pb-0">
                    <a class="logo-header pr-2" href="/"><img src="/image/Blizzard_Entertainment_Logo_header.png" alt="Logo" style="width:75px;"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">CHECKOUT <span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto account-header">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{user.blizzardName}}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <!-- Button trigger modal -->
                                        <div  class="login-container pt-2 pb-2 pl-4">
                                            <p style="color: #82c5ff" class="m-0">{{user.blizzardName}}</p>
                                            <p style="color: rgba(255,255,255,0.5); font-size:.85rem" class="m-0">{{user.email}}</p>
                                        </div>
                                        <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/me/setting"><i class="fas fa-cog"></i>Account Settings</a>
                                    <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/me/logout"><i class="fas fa-sign-out-alt"></i>Log Out</a>
                                </div>
                                <!-- Modal -->
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
    {{#each producers}}
    <div class="container pt-4">
        <div class="title-container">
            <h2 class="p-4 text-capitalize">{{this.name}}</h2>
        </div>
        <div class="body-container d-flex flex-wrap justify-content-center pt-3">
            {{#each ../games}}
                {{#if (checkViewBox ../this.name this.isGame) }}
                <div class="card card-item mb-4" style="width: 14rem; border:none; margin:0 0.7rem; border-radius:unset">
                    <a href="/product/{{this.slug}}"><img class="card-img-top" src="{{this.image}} " alt="Card image cap" style="border-radius:unset"></a>
                </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    {{/each}}
    <div class="career mt-4">
        <div class="container">
            <div class="row mt-5 pt-5">
                <div class="col-12">
                    <p class="h2">Create worlds</p>
                    <p class="h4 mt-3">Learn more about Careers at Blizzard</p>
                    <a type="button" class="btn btn-primary btn-lg mt-4 btn-explore">Explore Careers</a>
                </div>
            </div>
        </div>
    </div>
</main>
